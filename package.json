{
  "name": "ncu-action",
  "version": "0.0.1",
  "description": "npm package update action with ncu",
  "main": "src/index.ts",
  "scripts": {
    "lint": "eslint ./src/**/*.ts",
    "format": "prettier --write **/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "pack": "ncc build -s --external='@npmcli/run-script'",
    "all": "yarn lint && npm run format && yarn run typecheck && yarn run test && yarn run pack"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/SotaSuzuki/ncu-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "typescript"
  ],
  "author": "SotaSuzuki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SotaSuzuki/ncu-action/issues"
  },
  "homepage": "https://github.com/SotaSuzuki/ncu-action#readme",
  "dependencies": {
    "@actions/core": "^1.3.0",
    "@actions/exec": "^1.0.4",
    "@actions/io": "^1.1.0",
    "npm-check-updates": "^11.2.0"
  },
  "devDependencies": {
    "@npmcli/run-script": "^1.8.5",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.9.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "@vercel/ncc": "^0.28.6",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.4",
    "jest-circus": "^27.0.4",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.2",
    "typescript": "^4.3.2"
  }
}
